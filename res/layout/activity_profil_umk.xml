<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- Included header.xml here -->

    <ViewStub
        android:id="@+id/vsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inflatedId="@+id/header"
        android:layout="@layout/header" />

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:orientation="vertical" >

	    <ImageView
	        android:id="@+id/logoUMK"
	        android:layout_width="88dp"
	        android:layout_height="110dp"
	        android:src="@drawable/ic_menu_profile" />
		<LinearLayout
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    
		    android:layout_weight="1">
	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        
	        android:text="Nama UMK : "
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    <TextView
	        android:id="@+id/isiNamaUMK"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Nama UMK"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
		</LinearLayout>
		<LinearLayout
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    
		    android:layout_weight="1">
	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Email : "
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    <TextView
	        android:id="@+id/isiEmail"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Email"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
		</LinearLayout>
		<LinearLayout
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    
		    android:layout_weight="1">
	    <TextView
	        android:id="@+id/textView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Deskripsi UMK : "
	        android:textAppearance="?android:attr/textAppearanceMedium" />
		<TextView
	        android:id="@+id/isiDeskripsiUMK"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Deskripsi UMK"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
		</LinearLayout>
		<LinearLayout
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    
		    android:layout_weight="1">
	    <TextView
	        android:id="@+id/textView4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Alamat : "
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    <TextView
	        android:id="@+id/isiAlamat"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Alamat"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
		</LinearLayout>
		<LinearLayout
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    
		    android:layout_weight="1">
	    <TextView
	        android:id="@+id/textView5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Nomor Telepon : "
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    <TextView
	        android:id="@+id/isiNomorTelepon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Nomor Telepon"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
		</LinearLayout>
		<LinearLayout
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    
		    android:layout_weight="1">
	    <TextView
	        android:id="@+id/textView6"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Saldo UMK : "
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    <TextView
	        android:id="@+id/isiSaldo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Saldo UMK"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
		</LinearLayout>
		<LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

			<Button
			    android:id="@+id/ubahProfilButton"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Ubah Profil" />
	    
	    </LinearLayout>
	</LinearLayout>

</LinearLayout>