<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Pengeluaran"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/jamButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dateButton"
        android:layout_alignBottom="@+id/dateButton"
        android:layout_marginLeft="42dp"
        android:layout_toRightOf="@+id/dateButton"
        android:text="Jam" />

    <Button
        android:id="@+id/submitPengeluaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="88dp"
        android:layout_toRightOf="@+id/textView1"
        android:text="Submit" />

    <EditText
        android:id="@+id/jumlahPengeluaran"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"
        android:inputType="numberSigned" />

    <Button
        android:id="@+id/dateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="25dp"
        android:text="Tanggal" />

    <Spinner
        android:id="@+id/spinnerKategoriPengeluaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/jamButton"
        tools:listitem="@android:layout/simple_spinner_dropdown_item" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/submitPengeluaran"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="55dp"
        android:layout_marginLeft="17dp"
        android:text="Kategori Pengeluaran"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/namaPengeluaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/jumlahPengeluaran"
        android:layout_alignLeft="@+id/jumlahPengeluaran"
        android:layout_marginBottom="18dp"
        android:ems="10" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/namaPengeluaran"
        android:layout_alignLeft="@+id/textView3"
        android:text="Nama Pengeluaran"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinnerKategoriPengeluaran"
        android:layout_alignRight="@+id/textView4"
        android:layout_marginBottom="20dp"
        android:text="Jumlah Pengeluaran"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
