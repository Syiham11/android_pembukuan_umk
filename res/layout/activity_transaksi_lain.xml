<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >
    
<!-- Included header.xml here -->
	<ViewStub android:id="@+id/vsHeader" 
	    android:inflatedId="@+id/header" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout="@layout/header" />
	
	<LinearLayout
	    android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical" >

		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" >

		<TextView
		    android:id="@+id/textView2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Tanggal dan Jam :"
		    android:textAppearance="?android:attr/textAppearanceMedium" />
		<TextView
		    android:id="@+id/isiJam_transaksiLain"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Jam"
		    android:textAppearance="?android:attr/textAppearanceMedium" />
	    </LinearLayout>
	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="38dp"
		    android:orientation="vertical" >
		    
		</LinearLayout>
		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >

		<TextView
		    android:id="@+id/textView3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Jenis Transaksi :"
		    android:textAppearance="?android:attr/textAppearanceMedium" />

		<Spinner
		    android:id="@+id/spinnerJenisTransaksiLain"
		    android:layout_width="118dp"
		    android:layout_height="wrap_content"
		    android:prompt="@string/transaksi_penjualan" />

		<ImageButton
		    android:id="@+id/tambahJenisTransaksi"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:src="@drawable/plus" />
		
	    </LinearLayout>

	    <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="38dp"
		    android:orientation="vertical" >
		    
		</LinearLayout>

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >

	        <TextView
	            android:id="@+id/textView6"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Uraian :"
	            android:textAppearance="?android:attr/textAppearanceMedium" />

	        <EditText
	            android:id="@+id/isiUraian_transaksiLain"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.65" />
	    </LinearLayout>

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="38dp"
		    android:orientation="vertical" >
		    
		</LinearLayout>
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >

		<TextView
		    android:id="@+id/textView7"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Nilai Rupiah :"
		    android:textAppearance="?android:attr/textAppearanceMedium" />

		<EditText
		    android:id="@+id/isiNilaiRupiah_transaksiLain"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" />

		</LinearLayout>
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="38dp"
		    android:orientation="vertical" >
		    
		</LinearLayout>
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >

		<Button
		    android:id="@+id/buttonTransaksiPenjualanLain"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Tambah Transaksi"/>

		</LinearLayout>
	</LinearLayout>
</LinearLayout>
